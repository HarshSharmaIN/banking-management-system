<%- include("partials/header") %>

<main class="login-main center">
    <h1 class="grad-text-blue">Sign in to your Account</h1>
    <hr>
    <form action="/login" method="post">
        <div class="email mb-3">
            <label for="email" class="label-left form-label">Email</label>
            <input type="email" name="username" class="form-control">
        </div>
        <div class="password mb-3">
            <label for="password" class="label-left form-label">Password</label>
            <input type="password" name="password" class="form-control">
        </div>
        <button type="submit" class="login-btn">Log In</button>
    </form>

    <div class="google-login center">
        <a href="/auth/google" role="button" class="google center">
            <i class="fa-brands fa-google"></i>
            <span class="grad-text">Sign in with Google</span>
        </a>
    </div>

    <div class="r-signup">
        <p>Don't have an account? <a href="/register">Sign Up</a></p>
    </div>
</main>

<%- include("partials/footer") %>